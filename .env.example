# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Debug Mode (set to False for production)
DEBUG=False

# MongoDB Connection (Required for production)
MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/Beautiful_Spine
MONGODB_DATABASE_NAME=Beautiful_Spine

# Optional MongoDB Config Path (if using custom config file)
# MONGODB_CONFIG_PATH=config/mongodb_config.json

# Port for local development (Render will override this)
PORT=5000

# Optional: Enable/disable background scraping
# ENABLE_AUTO_SCRAPING=True

# Optional: Twikit/Twitter credentials (for Twitter functionality)
# TWITTER_USERNAME=your_twitter_username
# TWITTER_PASSWORD=your_twitter_password

# Environment
ENVIRONMENT=production