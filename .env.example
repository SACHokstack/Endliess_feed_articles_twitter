# MongoDB Configuration
MONGODB_CONNECTION_STRING=your_mongodb_connection_string_here
MONGODB_DATABASE_NAME=Beautiful_Spine

# Flask Configuration
DEBUG=False
PORT=5000

# Twitter Scraper Configuration (optional)
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password

# Logging Level
LOG_LEVEL=INFO

# Performance Settings
MAX_WORKERS=2
TIMEOUT=120

# Background Tasks
ENABLE_AUTO_SCRAPING=True
AUTO_SCRAPING_INTERVAL_HOURS=10

# File paths
MONGODB_CONFIG_PATH=config/mongodb_config.json